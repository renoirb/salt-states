# Upstart job for ganglia-monitor for {{ cluster }}

description     "Ganglia Monitor Daemon for {{ cluster }}"

start on runlevel [2345]
stop on runlevel [!2345]

expect fork
respawn

env PIDFILE="/var/run/gmond-{{ cluster }}.pid"

exec /usr/sbin/gmond --pid-file=$PIDFILE -c /etc/ganglia/gmond-{{ cluster }}.conf

